<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_card_height"
    android:layout_margin="@dimen/base_padding"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_recipe_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/recipe_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|end"
            android:padding="@dimen/base_padding_half"
            android:textColor="@android:color/white"
            tools:text="Test Recipe Name" />

        <ImageView
            android:id="@+id/recipe_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/cd_favorite_recipe_button"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/base_padding_half"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_favorite_border_black_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>